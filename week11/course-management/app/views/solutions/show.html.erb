<%- model_class = Task -%>
<div class="page-header">
  <h1 class="container"><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:textblock) %>:</strong></dt>
  <dd><%= @solution.textblock %></dd>
  <dt><strong><%= model_class.human_attribute_name(:task_id) %>:</strong></dt>
  <dd><%= @solution.task.lecture.name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              lecture_task_solutions_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_lecture_task_solution_path(@solution.task.lecture, @solution.task, @solution), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              lecture_task_solutions_path(@solution.task.lecture, @solution.task, @solution),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
