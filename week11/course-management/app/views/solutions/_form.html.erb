<%= form_for [@task.lecture, @task, @solution], :html => { :class => "form-horizontal task" } do |f| %>

  <% if @solution.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@solution.errors.count, "error") %> prohibited this task from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @solution.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :textblock, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :textblock, :class => 'form-control' %>
    </div>
    <%=f.error_span(:textblock) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                lecture_task_solutions_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
